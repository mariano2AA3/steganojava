package tmi.steganojava.mvc.controller;

import java.io.IOException;
import java.util.ArrayList;

import tmi.steganojava.exceptions.ImgFormatException;

public interface Controller {
	
	protected ArrayList<String> imgFormats;
	
	/**
	 * 
	 * @param path
	 * @return
	 * @throws ImgFormatException
	 */
	public boolean isImgFormatCorrect(String path) throws ImgFormatException, IOException;
	
	
	public float calculateImgEncodeAvaiableSize(String path) throws ImgFormatException, IOException;
	

}
